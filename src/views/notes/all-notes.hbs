
<div class="row" >
    {{#each notes}}
    <div class="col md-3">
        <div class="card m-3" style="min-width: 15rem; max-width:20rem; min-height:10rem; background-color:black; border:1px solid rgb(14, 231, 32);">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-itens-center">
                    {{title}} <a href="/notes/edit/{{_id}}"> <i class="fas fa-edit" style="color:rgb(14, 231, 32);"></i></a>
                </h4>
                <p>{{description}}</p>
                <small>{{date}}</small>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card m-auto mt-5" style="width: 18rem; background-color:black; border:1px solid rgb(14, 231, 32);">
        <div class="card-body">
            <h3> Welcome to the Notes App</h3>
            <p class="lead text-center">There are no notes yet</p>
            <a href="/notes/add" class="btn btn-success btn-block w-100 m-auto" style="background-color:rgb(14, 231, 32); border:1px solid black; color:black;" >Create One</a>
        </div>
    </div>
    {{/each}}
</div>