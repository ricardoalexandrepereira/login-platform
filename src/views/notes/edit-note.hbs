<div class="col-md-auto mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="d-flex justify-content-center">Edit note</h3>
        </div>
        <div class="card-body m-3">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group m-3">
                <input type="text" class="form-control" name="title" placeholder="title" 
                value="{{note.title}}">
                </div>
                <div class="form-group m-3">
                    <textarea name="description" class="form-control">{{note.description}}
                    </textarea>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary btn-block w-100 m-3" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>