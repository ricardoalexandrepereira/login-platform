<div class="row">
    <div class="col-md-4 mx-auto mt-4" style="background-color:black;">
        <div class="card mt-4 text-center pt-3" style="background-color:black; border:1px solid rgb(14, 231, 32);">
            <div class="card-header">
                <h2>Account Login</h2>
            </div>
            <img src="/img/OIP.jpg" class="rounded-circle mx-auto d-block mt-4 logo"  alt="logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group mt-4">
                        <input type="email" class="form-control" name="email" 
                        placeholder="email" autofocus>
                    </div>
                    <div class="form-group mt-4">
                        <input type="password" name="password" class="form-control" 
                        placeholder="Password">
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block w-100 " style="background-color:rgb(14, 231, 32); border:1px solid black; color:black;">
                            SignIn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>